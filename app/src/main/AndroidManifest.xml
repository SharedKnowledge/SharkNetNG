<?xml version="1.0" encoding="utf-8"?>
<manifest package="de.htw_berlin.sharkandroidstack"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.NFC"/>

    <application
        android:name=".android.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".system_modules.intro.IntroActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.nfc_benchmark.NfcBenchmarkMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".system_modules.log.LogActivity"
            android:label="@string/title_activity_log"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".android.PKIManagerActivity"/>
        <activity
            android:name=".system_modules.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".modules.mariodemo.MarioDemoMainActivity"
            android:label="@string/title_activity_mariodemo"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".modules.wifidirect.WifiDirectMainActivity"
            android:label="@string/title_activity_wifi_direct_main"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
