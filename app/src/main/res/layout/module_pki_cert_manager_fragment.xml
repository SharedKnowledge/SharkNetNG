<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:id="@+id/module_pki_cert_mananager_create_cert"
        android:layout_width="match_parent"
        android:background="@null"
        android:text="@string/fragment_pki_cert_manager_create_cert"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/module_pki_cert_mananager_cert_list"
        android:layout_below="@+id/module_pki_cert_mananager_create_cert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</RelativeLayout>
